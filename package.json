{
  "name": "aspaceos-a0-amadeus-cockpit",
  "version": "1.0.0",
  "description": "Noyau de l'OS A'Space - Mode Sobriété Pure Node",
  "main": "index.js",
  "scripts": {
    "start": "node dist/scripts/sync-contracts.js",
    "validate": "npm run build && node validate_contracts.js",
    "build": "tsc",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "sync-contracts": "tsx scripts/sync-contracts.ts",
    "db:reset": "prisma migrate reset --force --skip-seed",
    "test": "tsx tests/contract-guard.test.ts",
    "test:airlock": "ASPACE_AIR_LOCK_MODE=true tsx tests/airlock.integration.test.ts"
  },
  "author": "Amadeus",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "prisma": "^5.22.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0"
  }
}
