{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://amadeuspace.com/schemas/uplink.schema.json",
  "title": "A'Space Contract — Sunday Uplink (Jerry → A0)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "id",
    "created_at",
    "created_by",
    "lines"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "id": {
      "$ref": "#/$defs/id_string",
      "pattern": "^UPLINK-\\d{8}$"
    },
    "created_at": {
      "$ref": "#/$defs/iso_datetime"
    },
    "created_by": {
      "type": "string",
      "minLength": 2
    },
    "week": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12
    },
    "project_id": {
      "type": "string"
    },
    "lines": {
      "type": "array",
      "minItems": 10,
      "maxItems": 10,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "linked_pulse_ids": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "type4_required": {
      "type": "boolean",
      "default": false
    }
  },
  "$defs": {
    "iso_datetime": {
      "type": "string",
      "format": "date-time"
    },
    "id_string": {
      "type": "string",
      "minLength": 3
    },
    "signal_level": {
      "type": "string",
      "enum": [
        "green",
        "orange",
        "red"
      ]
    },
    "energy_cost": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "risk_level": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "domain_tag": {
      "type": "string",
      "minLength": 2
    },
    "string_list": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  }
}